<div class="bus-stop-details">
    {% block content %}
        <h4>{{ przystanek.nazwa }}</h4>
        <p>📅 {{ przystanek.data }} ( 💻 {{ przystanek.ip }}) - 🌐 {{ przystanek.browser }}  🚏  {{ przystanek.adres }}</p>
        <p>{{ przystanek.opis }}</p>
            {% if przystanek.zdj1|length > 0 %}
                <img class="img-fluid" src=".{{ asset( przystanek.id ~ '/' ~ przystanek.zdj1 , 'img') }}" />
            {% endif %}
            {% if przystanek.zdj2|length > 0 %}
                <img class="img-fluid" src=".{{ asset( przystanek.id ~ '/' ~ przystanek.zdj2 , 'img') }}" />
            {% endif %}
            {% if przystanek.zdj3|length > 0 %}
                <img class="img-fluid" src=".{{ asset( przystanek.id ~ '/' ~ przystanek.zdj3 , 'img') }}" />
            {% endif %}
        <button data-id="{{ przystanek.id }}" type="button" class="btn btn-dark btn-hide">Ukryj</button>
    {% endblock %}
</div>